<div class="container py-4">
  <div class="row">
    <div class="card-columns mb-4">
      <div class="card ">
        <div class="card-header text-center">
          <%= "直近1週間のデータ" %>
        </div>
        <div class="border-bottom">
          <%= column_chart @data.group_by_day(:created_at, last: 7).sum(:price), xtitle: "アイスに使った金額(円)", min: 0, max: 1000 %>
        </div>
          <%= column_chart @data.group_by_day(:created_at, last: 7).sum(:calorie), xtitle: "摂取カロリー(kcal)", min: 0, max: 1000 %>    
      </div>
      <div class="card">
        <div class="card-header text-center">
          <%= "直近1ヶ月のデータ" %>
        </div>
          <div class="border-bottom">
          <%= column_chart @data.group_by_day(:created_at, last: 30).sum(:price), xtitle: "アイスに使った金額(円)", min: 0, max: 1000%>
          <%= column_chart @data.group_by_day(:created_at, last: 30).sum(:calorie), xtitle: "摂取カロリー(kcal)", min: 0, max: 1000 %>
          </div>
      </div>
        
    </div>
      

    

      
      <div class="row">
          <%= render partial: "posts/post", collection: @posts %>
          
      </div>
     
  </div>
   <%= paginate @posts %>
</div>

<!DOCTYPE html>
<html>

<head>
  <title>シェアあいす！</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_pack_tag 'application' %>
  <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<%# ヘッダー %>
<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'シェアあいす！', root_path,class: "navbar-brand text-dark" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ">
        <%= link_to '新規投稿', new_post_path, class: "nav-link text-dark" %>
        <%= link_to '投稿の詳細', "#", class: "nav-link text-dark" %>
        <%= link_to '投稿一覧', "#", class: "nav-link text-dark" %>
        <%= link_to 'タグ一覧', "#", class: "nav-link text-dark" %>
        
    <% if user_signed_in? %>
        <%= link_to current_user.nickname, "#", class: "nav-link text-dark" %>
        <%= link_to 'ユーザー詳細', user_path(current_user), class: "nav-link text-dark" %> 
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link text-dark" %>
    <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "nav-link text-dark" %>
        <%= link_to '新規登録', new_user_registration_path, class: "nav-link text-dark" %>
    <% end %>
    </div>
    <div class="searchbox">
      <%= search_form_for @search, url: posts_path do |f| %>
        <%= f.text_field :content_cont ,placeholder: '投稿の検索ができます...' %>
        <%= f.submit ("検索") , class: 'search-btn'%>
       <% end %>
    </div>
      </div>
</header>
  <%= yield %>
</body>
  
</html>
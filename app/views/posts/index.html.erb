<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1 class="my-4 text-center alert alert-danger font-italic ">人気</h1>
        <div class="list-group">
          <% @tags.each do |tag| %>
            <span class="badge badge badge-info">
              <%= link_to "##{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "list-group-item"%>
            </span>
          <% end %> 
        </div>
    </div>
      <div class="col-lg-9">
        <div class="previews">
          <div class="slider">
            <% @randams.each do |randam| %>
              <%= link_to image_tag(randam.image), post_path(randam.id), method: :get, class: :slick_image %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <%= render partial: "post", collection: @posts %>
        </div>
      </div> 
  </div>
</div>



<%= paginate @posts %>






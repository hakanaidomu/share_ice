<div class="col-lg-4 col-md-6 mb-4">
  <div class="card border-info h-100">
    <div class="card-body">
      <%= link_to image_tag(post.image), post_path(post.id), method: :get, class:"card-img-top embbed-responsive"%>
    <p class="card-text ">
        <%= post.content %>
    </p>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <%= link_to "#{post.user.nickname}さんの投稿です", user_path(post.user, method: :get) %>
    </li>
    <li class="list-group-item ">
      <% if post.tag_list.any? %>
        <% @tags.each do |tag|%>
          <%= link_to posts_path(tag: tag.name) do%>
            <div class="badge badge badge-info"><%= "#{tag.name}(#{tag.taggings_count})" %></div>
          <%end%>
        <%end%>
      <% end %>
    </li>
    <li class="list-group-item"></li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">リンク1</a>
    <a href="#" class="card-link">リンク2</a>
  </div>
</div>

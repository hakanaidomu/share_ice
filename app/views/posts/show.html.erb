<%= image_tag @post.image %>
<%= "#{@post.user.nickname}さんの食べたアイスです"%>
<%= @post.content %>
<%= "#{@post.price}円" %>
<%= "#{@post.calorie}kcal" %>
<% if user_signed_in? && current_user.id != @post.user.id %>
<%= link_to "#{@post.user.nickname}さんの詳細", user_path(@post.user.id) %>
<% end %>
<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to "編集", edit_post_path(@post.id), method: :get %>
  <%= link_to "削除", @post_path, method: :delete %>
<% end %>


<div class="row">
    <ul>
        <li class="comment-create">
            <h3 class="text-left title">コメント</h3>
        </li>
        <li id="comments_area">
            <%= render partial: 'comments/index', locals: { comments: @comments } %>
        </li>
    </ul>
    <hr>
    <% if user_signed_in? %>
        <div class="comment-create">
            <h3 class="text-left">コメントを投稿する</h3>
            <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
        </div>
    <% end %>
</div>
  
